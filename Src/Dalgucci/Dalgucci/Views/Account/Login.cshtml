@model Dalgucci.ViewModel.LoginViewModel


<html>
<head>
    <script src="https://code.jquery.com/jquery-1.9.1.min.js"></script>
    <title>선바람-로그인페이지</title>
    <style>
        @@import url(//fonts.googleapis.com/earlyaccess/jejumyeongjo.css);

        body {
            font-family: 'Jeju Myeongjo', serif;
            margin-top: 0;
        }

        .wrapper {
            width: 1500px;
            height: 720px;
            margin-left: -100px;
        }

        .background {
            width: 1300px;
            height: 720px;
            margin: 0 auto;
            text-align: center;
            overflow: hidden;
            position: relative;
        }

            .background img {
                width: 100%;
                height: auto;
                filter: brightness(98%);
            }

        .container {
            width: 1300px;
            height: 100px;
            position: absolute;
            z-index: 100;
            margin-left: 100px;
        }
        /*상단메뉴*/
        .my_menu {
            width: 360px;
            height: 30px;
            margin-left: 940px;
            margin-bottom: 0;
            position: absolute;
            z-index: 2;
        }

            .my_menu > ul {
                height: 30px;
                padding: 0;
            }

                .my_menu > ul > a {
                    color: black;
                    text-decoration: none;
                    float: left;
                    margin-top: -15px;
                    font-size: 10pt;
                }

                    .my_menu > ul > a > li {
                        list-style: none;
                        height: 30px;
                        width: 90px;
                        line-height: 30px;
                    }

                        .my_menu > ul > a > li:hover {
                            text-decoration: underline;
                        }

        /*메인메뉴*/
        .menu {
            width: 1300px;
            height: 70px;
            background-color: rgba(255,255,255,0.5);
            position: absolute;
            margin-top: 30px;
            z-index: 10;
        }

        .logo {
            width: 250px;
            height: 70px;
            float: left;
            margin-right: 246px;
            text-align: center;
            display: block;
        }

            .logo img {
                width: auto;
                height: 100%;
                display: inline;
            }

        .nav {
            width: 804px;
            height: 70px;
            float: left;
            text-align: center;
        }

            .nav > ul {
                width: 804px;
                height: 70px;
                list-style: none;
                margin-top: 0px;
                padding: 0;
            }

                .nav > ul > a {
                    color: black;
                    text-decoration: none;
                    float: left;
                    font-size: 15pt;
                }

                    .nav > ul > a > li {
                        line-height: 70px;
                        width: 134px;
                    }

                        .nav > ul > a > li:hover {
                            background-color: rgba(0,0,0,0.3);
                            color: white;
                            height: 70px;
                        }
        /*메인메뉴-서브메뉴*/
        .submenu {
            margin: 0 auto;
            padding: 0;
            width: 134px;
            height: 250px;
            background-color: rgba(255,255,255,0.8);
            box-shadow: 0px 3px 6px 3px rgba(0,0,0,0.16);
            display: none;
        }

            .submenu li {
                list-style: none;
                text-decoration: none;
                line-height: 50px;
                color: black;
                font-size: 13pt;
            }

                .submenu li:hover {
                    color: pink;
                    text-decoration: underline;
                }

        .info {
            width: 600px;
            height: 360px;
            position: absolute;
            z-index: 180;
            background-color: white;
            margin-left: 450px;
            margin-top: 215.5px;
            box-shadow: 8px 8px 15px 3px rgba(0,0,0,0.2);
        }

            .info p {
                margin-top: 45px;
                margin-bottom: 25px;
                text-align: center;
                font-size: 30pt;
                font-weight: bold;
            }

            .info input {
                display: block;
                width: 450px;
                height: 40px;
                margin-left: auto;
                margin-right: auto;
                border-radius: 0 0 0 0;
                border-color: 1px solid rgb(112,112,112);
                padding-left: 10px;
                font-size: 12pt;
                outline: none;
            }

            .info button {
                display: block;
                width: 464px;
                height: 50px;
                margin-left: auto;
                margin-right: auto;
                border-radius: 0 0 0 0;
                text-align: center;
                font-size: 18pt;
                background-color: rgb(112,112,112);
                border-radius: 0 0 0 0;
                color: white;
                border: none;
            }

        input:focus {
            box-shadow: 0px 0px 6px 3px rgba(239,211,210,0.2);
            border: 2px solid rgb(239,211,210);
        }

        .info button:hover {
            background-color: rgb(82,82,82);
        }

        .info span > a {
            display: inline-block;
            margin-top: 20px;
            text-decoration: none;
            color: black;
        }

            .info span > a:hover {
                text-decoration: underline;
                outline: none;
            }

        .text-danger {
            font-size: 10pt;
            margin-left: 70px;
            color: red;
            display: inline-block;
        }
    </style>
</head>
<body>
    <div class="wrapper">
        <div class="container">
            <div class="my_menu">
                <ul>
                    <a href="#"><li>로그인</li></a>
                    <a href="#"><li>회원가입</li></a>
                    <a href="#"><li>장바구니</li></a>
                    <a href="#"><li>주문조회</li></a>
                </ul>
            </div>
            <div class="menu">
                <div class="logo">
                    <img src="https://ifh.cc/g/vjMHmu.png" alt="로고">
                </div>
                <div class="nav">
                    <ul>
                        <a href="#"><li>남자한복</li></a>
                        <a href="#"><li>여자한복</li></a>
                        <a href="#"><li>남아한복</li></a>
                        <a href="#"><li>여아한복</li></a>
                        <a href="#">
                            <li>
                                한복소품
                                <ul class="submenu">
                                    <li>노리개</li>
                                    <li>모자</li>
                                    <li>가방</li>
                                    <li>헤어</li>
                                    <li>보자기</li>
                                </ul>
                            </li>
                        </a>
                        <a href="#"><li>한복대여</li></a>
                    </ul>
                </div>
            </div>
        </div>
        <form class="form-horizontal" method="post" asp-controller="Account" asp-action="Login">
            <div class="info">
                <p>LOGIN</p>
                <input type="text" asp-for="User_ID" class="form-control" placeholder="아이디 입력해주세요">
                <span class="text-danger" asp-validation-for="User_ID"></span>

                <input type="password" asp-for="Pwd" class="form-control" placeholder="비밀번호 입력해주세요">
                <span class="text-danger" asp-validation-for="Pwd"></span>

                <button type="submit" class="btn btn-success">로그인</button>
                <span style="padding-left:175px;"><a href="#">아이디 찾기</a>|</span>
                <span><a href="#">비밀번호 찾기</a>|</span>
                <span><a href="#">회원가입</a></span>
            </div>
            <div class="background">
                <img src="https://www.childrensalonoutlet.com/media/catalog/product/cache/0/image/1000x1000/9df78eab33525d08d6e5fb8d27136e95/i/d/ido-girls-white-chiffon-dress-322170-f1585fe0eb8b813b1ae6730ff3ad424cfb6fe3a8.jpg" alt="배경">
            </div>
        </form>
    </div>

    <script>
        $(".nav>ul>a>li").mouseover(function () {
            $(this).children(".submenu").stop().slideDown();
        });
        $(".nav>ul>a>li").mouseleave(function () {
            $(this).children(".submenu").stop().slideUp();
        });



    </script>
    @if (ViewBag.Message != null)
    {
    <script type="text/javascript">
        window.onload = function () {
            alert("아이디 비밀번호가 일치하지 않습니다");
        };
    </script>
    }

    
</body>
</html>
