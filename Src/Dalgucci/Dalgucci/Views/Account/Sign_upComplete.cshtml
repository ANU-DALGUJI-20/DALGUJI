                margin-top: 40px;
                width: 50px;
            }

            .info h1 {
                margin-top: 25px;
                margin-bottom: 18px;
                font-size: 30pt;
                font-weight: lighter;
            }

            .info h3 {
                margin-top: 0px;
                margin-bottom: 60px;
                font-weight: lighter;
                font-size: 20pt;
            }

        .btn_wrap {
            width: 100%;
            height: 50px;
        }

            .btn_wrap a > button {
                width: 280px;
                height: 50px;
                border: none;
                outline: none;
                font-size: 15pt;
            }

                .btn_wrap a > button:hover {
                    background-color: rgba(0,0,0,0.4);
                    color: white;
                }
